{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2015",
    "lib": [
      "ESNext",
      "ES5",
      "ES6"
    ],
    "declaration": true,
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "outDir": "./dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ]
}
